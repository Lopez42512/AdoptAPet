<%- include("partials/header") -%>
<section id="Adopt">
  <div style="padding: 0; background-color: #393e46" class="container-fluid">
    <!-- <% console.log(selectedAnimalData) %> -->
    <div
      id="carouselExampleIndicators"
      class="carousel slide"
      data-ride="carousel"
      data-pause="hover"
      data-touch="true"
    >
      <div class="carousel-inner">
        <% selectedAnimalData.photos.forEach((pic, index) => { %> <% if (index
        === 0 ) { %>
        <div class="carousel-item active">
          <img src="<%= pic.full %>" class="d-block" alt="paw no" />
        </div>
        <% } else { %>
        <div class="carousel-item">
          <img src="<%= pic.full %>" class="d-block" alt="paw no" />
        </div>
        <% } %> <% }) %>
      </div>
      <a
        class="carousel-control-prev"
        href="#carouselExampleIndicators"
        role="button"
        data-slide="prev"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a
        class="carousel-control-next"
        href="#carouselExampleIndicators"
        role="button"
        data-slide="next"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
  <!-- <div style="width: 100%; height: 100px; border: .1px solid lightgray;" class="container-fluid"></div> -->
  <div
    style="border: 1px solid white; background-color: #eeeeee; padding: 3%"
    class="container-fluid"
  >
    <h1><%= selectedAnimalData.name %></h1>
    <% if (selectedAnimalData.breeds.secondary === null) { %>
    <h5><%= selectedAnimalData.breeds.primary %></h5>
    <% } else { %>
    <h5>
      <%= selectedAnimalData.breeds.primary %> & <%=
      selectedAnimalData.breeds.secondary %> Mix
    </h5>
    <% } %>
    <h5>
      <%= selectedAnimalData.contact.address.city %>, <%=
      selectedAnimalData.contact.address.state%>
    </h5>
    <a
      href="mailto:<%= selectedAnimalData.contact.email %>?subject= I'll like to learn more about <%= selectedAnimalData.name %>"
    >
      <button class="btn btn-lg btn-light">
        Contact <%= selectedAnimalData.name %>
      </button>
    </a>
  </div>
  <div style="background-color: #393e46;color: #76ead7; text-align: center; padding: 5% 10%;" class="container-fluid">
    <h1 style="margin-bottom: 30px; text-align: center;">About</h1>
    <div class="row">
        <div class="col-lg-6">
            <h3>Characteristics</h3>
            <p style="margin-bottom: 30px;"><%= selectedAnimalData.tags[0] %></p>
            <h3>Coat Length</h3>
            <p style="margin-bottom: 30px;"><%= selectedAnimalData.coat %></p>
            <h3>House-Trained</h3>
            <p style="margin-bottom: 30px;"><%= selectedAnimalData.attributes.house_trained %></p>
        </div>
        <div class="col-lg-6">
            <h3>Health</h3>
            <p>Spayed or Neutered: <%= selectedAnimalData.attributes.spayed_neutered %></p>
            <p>Shots Up to Date: <%= selectedAnimalData.attributes.shots_current %></p>
            <p style="margin-bottom: 30px;">Special Needs: <%= selectedAnimalData.attributes.special_needs %></p>
            <h3>Good In A Home With</h3>
            <p>Children: <%= selectedAnimalData.environment.children %></p>
            <p>Dogs: <%= selectedAnimalData.environment.dogs %></p>
            <p>Cats: <%= selectedAnimalData.environment.cats %></p>
        </div>
    </div>
  </div>
  <div style="background-color: #76ead7; padding: 5%;" class="container-fluid">
      <h3 style="margin: 0;">Learn More About Adopting <%= selectedAnimalData.name %> at <a href="<%= selectedAnimalData.url %>">Petfinder.com</a></h3>
  </div>
</section>

<%- include("partials/footer") -%>
