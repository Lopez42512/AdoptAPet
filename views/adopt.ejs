<%- include("partials/header") -%>
<section id="Adopt">
    <div style="padding: 2% 0 1%; background-color: #393e46;" class="container-fluid">
        <% console.log(selectedAnimalData) %>
        <div
          id="carouselExampleIndicators"
          class="carousel slide"
          data-ride="carousel"
          data-pause="hover"
          data-touch= true
        >
          <div class="carousel-inner">
            <% selectedAnimalData.photos.forEach((pic, index) => { %> <% if (index ===
            0 ) { %>
            <div class="carousel-item active">
              <img src="<%= pic.full %>" class="d-block" alt="paw no" />
            </div>
            <% } else { %>
            <div class="carousel-item">
              <img src="<%= pic.full %>" class="d-block" alt="paw no" />
            </div>
            <% } %> <% }) %>
          </div>
          <a
            class="carousel-control-prev"
            href="#carouselExampleIndicators"
            role="button"
            data-slide="prev"
            
          >
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a
            class="carousel-control-next"
            href="#carouselExampleIndicators"
            role="button"
            data-slide="next"
            
          >
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
      <div style="width: 100%; height: 100px; border: .1px solid lightgray;" class="container-fluid"></div>
      <div style="background-color: white; padding: 3%;" class="container-fluid">
          <h1><%= selectedAnimalData.name %></h1>
          <% if (selectedAnimalData.breeds.secondary === null) { %>
              <h5><%= selectedAnimalData.breeds.primary %></h5>
          <% } else { %>
            <h5><%= selectedAnimalData.breeds.primary %> & <%= selectedAnimalData.breeds.secondary %> Mix</h5>
          <% } %>
          <h5><%= selectedAnimalData.contact.address.city %>, <%= selectedAnimalData.contact.address.state%> </h5>
          <a href="mailto:<%= selectedAnimalData.contact.email %>?subject= I'll like to learn more about <%= selectedAnimalData.name %>">
            <button class="btn btn-lg btn-light">Contact <%= selectedAnimalData.name %></button>
          </a>
          
      </div>
      <div style="width: 100%; height: 100px; border: .1px solid lightgray;" class="container-fluid"></div>
</section>


<%- include("partials/footer") -%>
